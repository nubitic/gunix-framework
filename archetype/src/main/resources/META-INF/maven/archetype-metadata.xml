<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
  name="archetype">

  <modules>
    <module id="${rootArtifactId}-core" dir="__rootArtifactId__-core" name="${rootArtifactId}-core">
      <fileSets>
        <fileSet encoding="UTF-8" >
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>

    <module id="${rootArtifactId}-vista" dir="__rootArtifactId__-vista" name="${rootArtifactId}-vista">
      <fileSets>
        <fileSet encoding="UTF-8" >
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8" >
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8" >
          <directory>src/main/webapp/VAADIN</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8" >
          <directory>src/main/webapp/META-INF</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8" >
          <directory>src/main/webapp/WEB-INF</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>

    <module id="${rootArtifactId}-backEnd" dir="__rootArtifactId__-backEnd" name="${rootArtifactId}-backEnd">
      <fileSets>
        <fileSet encoding="UTF-8" >
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8" >
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>

  <requiredProperties>
    <requiredProperty key="JAVA_1_8_HOME">
      <defaultValue>/Program Files/Java/jdk1.8.0_40</defaultValue>
    </requiredProperty>
    <requiredProperty key="activitiVersion">
      <defaultValue>5.18.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="openLVersion">
      <defaultValue>5.16.2</defaultValue>
    </requiredProperty>
  </requiredProperties>
</archetype-descriptor>